{
  "name": "simpro-quote-agent",
  "private": true,
  "version": "0.1.0",
  "description": "Simpro Quote Agent monorepo",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=apps/api",
    "dev:api": "npm run dev --workspace=apps/api",
